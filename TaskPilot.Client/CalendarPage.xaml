<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TaskPilot.Client.CalendarPage"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20,40,20,30" Spacing="15">

            <!-- Header -->
            <Label Text="Weekly Calendar"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#1E1E5A"
                   HorizontalOptions="Start" />

            <!-- Import PDF Button (Smaller, Modern) -->
            <Button Text="Import Timetable (PDF)" 
                    BackgroundColor="#1E1E5A"
                    TextColor="White"
                    CornerRadius="20"
                    HeightRequest="40"
                    HorizontalOptions="Start"
                    Padding="15,0"
                    Clicked="OnImportPdfClicked" />

            <!-- Search Bar -->
            <Frame CornerRadius="25"
                   BackgroundColor="#F3F3F3"
                   Padding="8"
                   HasShadow="False"
                   VerticalOptions="Center"
                   HeightRequest="50">
                <SearchBar Placeholder="Search your schedule..."
                           PlaceholderColor="#9FA4B2"
                           TextColor="#1E1E5A"
                           FontSize="14"
                           BackgroundColor="Transparent"
                           HeightRequest="35" />
            </Frame>

            <!-- Week Navigation -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="15" Margin="0,10,0,0">
                <Button Text="‹" BackgroundColor="Transparent" TextColor="#1E1E5A" FontSize="22"/>
                <Label Text="This Week" FontAttributes="Bold" FontSize="16" TextColor="#1E1E5A" VerticalOptions="Center"/>
                <Button Text="›" BackgroundColor="Transparent" TextColor="#1E1E5A" FontSize="22"/>
            </HorizontalStackLayout>

            <!-- Days of the Week Header -->
            <Grid ColumnSpacing="1" RowSpacing="1" HeightRequest="30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Text="" />
                <Label Grid.Column="1" Text="Monday" FontAttributes="Bold" FontSize="12" HorizontalOptions="Center" TextColor="#1E1E5A"/>
                <Label Grid.Column="2" Text="Tuesday" FontAttributes="Bold" FontSize="12" HorizontalOptions="Center" TextColor="#1E1E5A"/>
                <Label Grid.Column="3" Text="Wednesday" FontAttributes="Bold" FontSize="12" HorizontalOptions="Center" TextColor="#1E1E5A"/>
                <Label Grid.Column="4" Text="Thursday" FontAttributes="Bold" FontSize="12" HorizontalOptions="Center" TextColor="#1E1E5A"/>
                <Label Grid.Column="5" Text="Friday" FontAttributes="Bold" FontSize="12" HorizontalOptions="Center" TextColor="#1E1E5A"/>
                <Label Grid.Column="6" Text="Saturday" FontAttributes="Bold" FontSize="12" HorizontalOptions="Center" TextColor="#1E1E5A"/>
                <Label Grid.Column="7" Text="Sunday" FontAttributes="Bold" FontSize="12" HorizontalOptions="Center" TextColor="#1E1E5A"/>
            </Grid>

            <!-- Calendar Grid -->
            <ScrollView Orientation="Horizontal" HeightRequest="500">
                <Grid ColumnSpacing="1" RowSpacing="1" Padding="0">
                    <!-- Columns -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- Rows -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <!-- Time Labels -->
                    <Label Grid.Row="0" Grid.Column="0" Text="8 AM" FontSize="11" TextColor="#999" VerticalOptions="Start"/>
                    <Label Grid.Row="1" Grid.Column="0" Text="9 AM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="2" Grid.Column="0" Text="10 AM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="3" Grid.Column="0" Text="11 AM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="4" Grid.Column="0" Text="12 PM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="5" Grid.Column="0" Text="1 PM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="6" Grid.Column="0" Text="2 PM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="7" Grid.Column="0" Text="3 PM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="8" Grid.Column="0" Text="4 PM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="9" Grid.Column="0" Text="5 PM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="10" Grid.Column="0" Text="6 PM" FontSize="11" TextColor="#999"/>
                    <Label Grid.Row="11" Grid.Column="0" Text="7 PM" FontSize="11" TextColor="#999"/>

                    <!-- Background Lines -->
                    <BoxView Grid.RowSpan="12" Grid.Column="1" Color="#EEEEEE"/>
                    <BoxView Grid.RowSpan="12" Grid.Column="2" Color="#EEEEEE"/>
                    <BoxView Grid.RowSpan="12" Grid.Column="3" Color="#EEEEEE"/>
                    <BoxView Grid.RowSpan="12" Grid.Column="4" Color="#EEEEEE"/>
                    <BoxView Grid.RowSpan="12" Grid.Column="5" Color="#EEEEEE"/>
                    <BoxView Grid.RowSpan="12" Grid.Column="6" Color="#EEEEEE"/>
                    <BoxView Grid.RowSpan="12" Grid.Column="7" Color="#EEEEEE"/>

                    <!-- Task Events -->
                    <Frame Grid.Column="2" Grid.Row="1" Grid.RowSpan="2"
                           BackgroundColor="#E8E2FF"
                           CornerRadius="8"
                           Margin="2"
                           Padding="6">
                        <VerticalStackLayout>
                            <Label Text="UI Design Review" FontAttributes="Bold" FontSize="12" TextColor="#1E1E5A"/>
                            <Label Text="09:00 - 11:00" FontSize="10" TextColor="#666"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="3" Grid.Row="2" Grid.RowSpan="1"
                           BackgroundColor="#FFF3E0"
                           CornerRadius="8"
                           Margin="2"
                           Padding="6"
                           MinimumHeightRequest="50">
                        <VerticalStackLayout>
                            <Label Text="Project Brainstorm" FontAttributes="Bold" FontSize="12" TextColor="#1E1E5A"/>
                            <Label Text="10:30 - 11:30" FontSize="10" TextColor="#666"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="4" Grid.Row="3" Grid.RowSpan="2"
                           BackgroundColor="#DCE6FF"
                           CornerRadius="8"
                           Margin="2"
                           Padding="6">
                        <VerticalStackLayout>
                            <Label Text="ITMDA Research Proposal" FontAttributes="Bold" FontSize="12" TextColor="#1E1E5A"/>
                            <Label Text="11:30 - 13:00" FontSize="10" TextColor="#666"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="6" Grid.Row="4" Grid.RowSpan="2"
                           BackgroundColor="#D6F5E7"
                           CornerRadius="8"
                           Margin="2"
                           Padding="6">
                        <VerticalStackLayout>
                            <Label Text="Teams Meeting" FontAttributes="Bold" FontSize="12" TextColor="#1E1E5A"/>
                            <Label Text="12:00 - 14:00" FontSize="10" TextColor="#666"/>
                        </VerticalStackLayout>
                    </Frame>

                    <Frame Grid.Column="5" Grid.Row="6" Grid.RowSpan="2"
                           BackgroundColor="#FCEED8"
                           CornerRadius="8"
                           Margin="2"
                           Padding="6">
                        <VerticalStackLayout>
                            <Label Text="Study Chapter 13-16 ITEPA" FontAttributes="Bold" FontSize="12" TextColor="#1E1E5A"/>
                            <Label Text="15:00 - 17:00" FontSize="10" TextColor="#666"/>
                        </VerticalStackLayout>
                    </Frame>

                </Grid>
            </ScrollView>

            <!-- Task List with Checkboxes -->
            <Frame BackgroundColor="#F8F8FF" CornerRadius="15" Padding="15" Margin="0,20,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Task List" FontAttributes="Bold" FontSize="18" TextColor="#1E1E5A"/>

                    <Label Text="Completed Tasks:" FontAttributes="Bold" FontSize="14" TextColor="#1E1E5A"/>
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox Color="#1E1E5A" IsChecked="True"/>
                        <Label Text="UI Design Review" FontSize="14" TextColor="#555" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox Color="#1E1E5A" IsChecked="True"/>
                        <Label Text="ITMDA Research Proposal" FontSize="14" TextColor="#555" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <Label Text="Pending Tasks:" FontAttributes="Bold" FontSize="14" TextColor="#1E1E5A" Margin="0,5,0,0"/>
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox Color="#1E1E5A"/>
                        <Label Text="Project Brainstorm" FontSize="14" TextColor="#555" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox Color="#1E1E5A"/>
                        <Label Text="Study Chapter 13-16 ITEPA" FontSize="14" TextColor="#555" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="10">
                        <CheckBox Color="#1E1E5A"/>
                        <Label Text="Teams Meeting" FontSize="14" TextColor="#555" VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>