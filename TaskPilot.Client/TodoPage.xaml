<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TaskPilot.Client.ViewModels;assembly=TaskPilot.Client"
    x:Class="TaskPilot.Client.TodoPage"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#E5E7EB">

    <Grid RowDefinitions="*, Auto" BackgroundColor="#F5F5F7">
        <ScrollView>
            <VerticalStackLayout Padding="40,30" Spacing="30">

                <!-- HEADER -->
                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                    <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                        <Label Text="What's on your plate today?" 
                           FontSize="36" 
                           FontAttributes="Bold" 
                           TextColor="#1A1D3F"/>
                    </VerticalStackLayout>
                </Grid>

                <VerticalStackLayout Spacing="5" Padding="0,5,0,5">
                    <Label Text="“The best way to get started is to stop talking and start doing.”"
                       FontSize="16"
                       TextColor="#6B7280"
                       FontAttributes="Italic"/>
                    <Label Text="- Walt Disney"
                       FontSize="13"
                       TextColor="#9CA3AF"
                       HorizontalOptions="End"/>
                </VerticalStackLayout>

                <!-- ADD NEW TASK FORM -->
                <Frame BackgroundColor="#DEDEDE"
                   CornerRadius="20"
                   Padding="25"
                   Margin="0,20,0,0"
                   BorderColor="Transparent"
                   HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <Label Text="{Binding HeaderText}"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="#1A1D3F"/>


                        <Border Stroke="#F0F0F0" StrokeThickness="1" BackgroundColor="#F9FAFB" Padding="15,0" StrokeShape="RoundRectangle 8">
                            <Entry Placeholder="Task Name"
                               Text="{Binding Name}"
                               VerticalOptions="Center"
                               BackgroundColor="Transparent"
                               TextColor="#1A1D3F"
                               PlaceholderColor="#9CA3AF"
                               HeightRequest="45"/>
                        </Border>

                        <Border Stroke="#F0F0F0" StrokeThickness="1" BackgroundColor="#F9FAFB" Padding="15" StrokeShape="RoundRectangle 8">
                            <Editor Placeholder="Task Description"
                               Text="{Binding Description}"
                               HeightRequest="100"
                               BackgroundColor="Transparent"
                               TextColor="#1A1D3F"
                               PlaceholderColor="#9CA3AF"/>
                        </Border>

                        <VerticalStackLayout Spacing="10">
                            <Label Text="Due Date" 
                                   TextColor="#6B7280" 
                                   FontSize="14"/>
                            <DatePicker Date="{Binding DueDate, Mode=TwoWay}"
                                    BackgroundColor="#F9FAFB"
                                    HorizontalOptions="Center"
                                    TextColor="#1A1D3F"/>

                            <Label Text="Due Time" 
                                   TextColor="#6B7280" 
                                   FontSize="14"/>
                            <TimePicker Time="{Binding DueTime, Mode=TwoWay}"
                                        HorizontalOptions="Center"
                                        TextColor="#1A1D3F" />
                        </VerticalStackLayout>

                        <Label Text="Priority (1 = High, 5 = Low):"
                           FontSize="14"
                           TextColor="#6B7280"
                           FontAttributes="Bold"/>

                        <FlexLayout Direction="Row" Wrap="Wrap" AlignItems="Center" RadioButtonGroup.GroupName="PriorityGroup" RadioButtonGroup.SelectedValue="{Binding Priority, Mode=TwoWay}">
                            <RadioButton Content="1" Value="1" TextColor="#6B7280" Margin="0,0,5,0"/>
                            <RadioButton Content="2" Value="2" TextColor="#6B7280" Margin="0,0,5,0"/>
                            <RadioButton Content="3" Value="3" TextColor="#6B7280" Margin="0,0,5,0"/>
                            <RadioButton Content="4" Value="4" TextColor="#6B7280" Margin="0,0,5,0"/>
                            <RadioButton Content="5" Value="5" TextColor="#6B7280" Margin="0,0,5,0"/>
                        </FlexLayout>

                        <Button Text="{Binding SaveButtonText}"
                            Command="{Binding SaveCommand}"
                            IsEnabled="{Binding CanSave}"
                            BackgroundColor="#1A1D3F"
                            TextColor="White"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Margin="0,10,0,0"/>
                        <Button Text="Remove Todo"
                            Command="{Binding DeleteCommand}"
                            IsVisible="{Binding IsEditMode}" 
                            BackgroundColor="#1A1D3F"
                            TextColor="White"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Margin="0,10,0,0"/>
                    </VerticalStackLayout>
                </Frame>
            </VerticalStackLayout>
        </ScrollView>
        <ContentPresenter Grid.Row="0" />
        <Grid Grid.Row="1" 
          ColumnDefinitions="*,*,*" 
          BackgroundColor="Transparent"
          HeightRequest="60"
          Padding="10,0,0,0">
            <Button Grid.Column="0"
                    WidthRequest="60" 
                    Margin="0,0,0,15" CornerRadius="10"  
                    HeightRequest="60"
                    ImageSource="calendar.jpg"
                    BackgroundColor="White" 
                     Command="{Binding ReturnCalendarCommand}"
                    TextColor="White"/>
            <Button Grid.Column="1"
                    WidthRequest="60" 
                    Margin="0,0,0,15" CornerRadius="10"  
                    HeightRequest="60"
                    ImageSource="home.jpg"
                    BackgroundColor="White" 
                     Command="{Binding ReturnHomeCommand}"
                    TextColor="White"/>
            <Button Grid.Column="2"
                    WidthRequest="60" 
                    Margin="0,0,0,15" CornerRadius="10"  
                    HeightRequest="60"
                    ImageSource="profile.jpg"
                    BackgroundColor="White" 
                     Command="{Binding ReturnProfileCommand}"
                    TextColor="White"/>
        </Grid>
    </Grid>
</ContentPage>