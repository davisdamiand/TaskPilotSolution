<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TaskPilot.Client.TodoPage"
    Shell.NavBarIsVisible="False"
    BackgroundColor="Black">
    
    <ScrollView>
        <StackLayout>
            <Label
                x:Name="LabelStudentName"/>
            <Label
                Text="Todo Name:"/>
            <Entry
                x:Name="EntryTodoName"/>
            <Label
                Text="Todo Description:"/>
            <Editor
                x:Name="EditorTodoDescription"
                AutoSize="TextChanges"
                HeightRequest="100"/>
            <HorizontalStackLayout>
                <Label
                    Text="Due Date:"/>
                <DatePicker
                    x:Name="DatePickerDueDate"/>
                <TimePicker
                    x:Name="TimePickerDueTime"/>
            </HorizontalStackLayout>
            <HorizontalStackLayout>
                <RadioButton Content="1" GroupName="RatingGroup" Value="1" />
                <RadioButton Content="2" GroupName="RatingGroup" Value="2" />
                <RadioButton Content="3" GroupName="RatingGroup" Value="3" />
                <RadioButton Content="4" GroupName="RatingGroup" Value="4" />
                <RadioButton Content="5" GroupName="RatingGroup" Value="5" />
            </HorizontalStackLayout>
            <Button
                x:Name="ButtonSaveTodo"
                Text="Save Todo"/>
        </StackLayout>
    </ScrollView>
</ContentPage>