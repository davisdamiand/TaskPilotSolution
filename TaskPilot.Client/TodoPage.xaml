<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TaskPilot.Client.TodoPage"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20,40,20,30" Spacing="15">

            <!-- HEADER -->
            <Label Text="Jarren"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#1E1E5A"/>

            <!-- Search Bar -->
            <Frame BackgroundColor="#F3F3F3"
                   CornerRadius="25"
                   Padding="10,5"
                   HasShadow="False"
                   HeightRequest="50">
                <Grid ColumnDefinitions="*,Auto">
                    <Entry x:Name="SearchBar"
                           Placeholder="Search tasks"
                           FontSize="14"
                           BackgroundColor="Transparent"
                           TextColor="Black"
                           PlaceholderColor="#999"
                           Margin="10,0"
                           VerticalOptions="Center"
                           HorizontalOptions="FillAndExpand" />
                    <Image Source="search.png"
                           WidthRequest="20"
                           HeightRequest="20"
                           VerticalOptions="Center"
                           HorizontalOptions="End"
                           Margin="0,0,10,0"/>
                </Grid>
            </Frame>

            <!-- Date & Greeting -->
            <Label x:Name="DayLabel"
                   FontSize="16"
                   TextColor="#555"
                   Text="Today, Monday 13 October 2025" />
            <Label Text="Your Tasks for Today"
                   FontAttributes="Bold"
                   FontSize="20"
                   TextColor="#1E1E5A"/>

            <!-- Summary Stats -->
            <HorizontalStackLayout Spacing="10">
                <Frame BackgroundColor="#E8E2FF" CornerRadius="15" Padding="10" WidthRequest="100">
                    <VerticalStackLayout>
                        <Label Text="Ongoing" FontAttributes="Bold" TextColor="#1E1E5A" FontSize="12"/>
                        <Label Text="3" FontSize="20" FontAttributes="Bold" TextColor="#1E1E5A"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="#DCE6FF" CornerRadius="15" Padding="10" WidthRequest="100">
                    <VerticalStackLayout>
                        <Label Text="Completed" FontAttributes="Bold" TextColor="#1E1E5A" FontSize="12"/>
                        <Label Text="5" FontSize="20" FontAttributes="Bold" TextColor="#1E1E5A"/>
                    </VerticalStackLayout>
                </Frame>

                <Frame BackgroundColor="#FCEED8" CornerRadius="15" Padding="10" WidthRequest="100">
                    <VerticalStackLayout>
                        <Label Text="Upcoming" FontAttributes="Bold" TextColor="#1E1E5A" FontSize="12"/>
                        <Label Text="2" FontSize="20" FontAttributes="Bold" TextColor="#1E1E5A"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>

            <!-- Task List -->
            <VerticalStackLayout x:Name="TaskList" Spacing="15" Margin="0,10,0,0">
                <Frame BackgroundColor="#E8E2FF" CornerRadius="12" Padding="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout>
                            <Label Text="Finish UI Design for ITMDA" FontAttributes="Bold" FontSize="16" TextColor="#1E1E5A"/>
                            <Label Text="11:00 - 13:00" FontSize="12" TextColor="#555"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="#DCE6FF" CornerRadius="12" Padding="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout>
                            <Label Text="Teams Meeting" FontAttributes="Bold" FontSize="16" TextColor="#1E1E5A"/>
                            <Label Text="14:00 - 15:30" FontSize="12" TextColor="#555"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <Frame BackgroundColor="#FCEED8" CornerRadius="12" Padding="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <VerticalStackLayout>
                            <Label Text="Submit ITBEA Assignment" FontAttributes="Bold" FontSize="16" TextColor="#1E1E5A"/>
                            <Label Text="17:00" FontSize="12" TextColor="#555"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

