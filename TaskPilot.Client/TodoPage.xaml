<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:TaskPilot.Client.ViewModels;assembly=TaskPilot.Client"
    x:Class="TaskPilot.Client.TodoPage"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#F5F5F7">

    <ScrollView>
        <VerticalStackLayout Padding="40,30" Spacing="30">

            <!-- HEADER -->
            <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                    <Label Text="What's on your plate today?" 
                           FontSize="36" 
                           FontAttributes="Bold" 
                           TextColor="#1A1D3F"/>
                </VerticalStackLayout>
            </Grid>

            <!-- ADD NEW TASK FORM -->
            <Frame BackgroundColor="White"
                   CornerRadius="20"
                   Padding="25"
                   Margin="0,20,0,0"
                   BorderColor="Transparent"
                   HasShadow="True">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Add a New Task"
                           FontAttributes="Bold"
                           FontSize="20"
                           TextColor="#1A1D3F"/>

                    <Border Stroke="#F0F0F0" StrokeThickness="1" BackgroundColor="#F9FAFB" Padding="15,0" StrokeShape="RoundRectangle 8">
                        <Entry Placeholder="Task Name"
                               Text="{Binding Name}"
                               VerticalOptions="Center"
                               BackgroundColor="Transparent"
                               TextColor="#1A1D3F"
                               PlaceholderColor="#9CA3AF"
                               HeightRequest="45"/>
                    </Border>

                    <Border Stroke="#F0F0F0" StrokeThickness="1" BackgroundColor="#F9FAFB" Padding="15" StrokeShape="RoundRectangle 8">
                        <Editor Placeholder="Task Description"
                               Text="{Binding Description}"
                               HeightRequest="100"
                               BackgroundColor="Transparent"
                               TextColor="#1A1D3F"
                               PlaceholderColor="#9CA3AF"/>
                    </Border>

                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto, Auto" ColumnSpacing="15" RowSpacing="10">
                        <Label Text="Due Date" 
                               Grid.Row="0" Grid.Column="0" 
                               VerticalOptions="Center" 
                               TextColor="#6B7280" 
                               FontSize="14"/>
                        <DatePicker Date="{Binding DueDate, Mode=TwoWay}"
                                    BackgroundColor="#F9FAFB"
                                    TextColor="#1A1D3F" 
                                    Grid.Row="1" Grid.Column="0"/>

                        <Label Text="Due Time" 
                               Grid.Row="0" Grid.Column="1" 
                               VerticalOptions="Center" 
                               TextColor="#6B7280" 
                               FontSize="14"/>
                        <HorizontalStackLayout Grid.Row="1" Grid.Column="1" Spacing="5" VerticalOptions="Center">
                            <TimePicker Time="{Binding DueTime, Mode=TwoWay}"
                                        BackgroundColor="#F9FAFB"
                                        TextColor="#1A1D3F" />
                            <Label Text="-" VerticalOptions="Center" TextColor="#6B7280" FontSize="14" FontAttributes="Bold"/>
                        </HorizontalStackLayout>
                    </Grid>

                    <Label Text="Priority (1 = High, 5 = Low):"
                           FontSize="14"
                           TextColor="#6B7280"
                           FontAttributes="Bold"/>

                    <HorizontalStackLayout Spacing="10" RadioButtonGroup.GroupName="PriorityGroup" RadioButtonGroup.SelectedValue="{Binding Priority, Mode=TwoWay}">
                        <RadioButton Content="1" Value="1"/>
                        <RadioButton Content="2" Value="2"/>
                        <RadioButton Content="3" Value="3"/>
                        <RadioButton Content="4" Value="4"/>
                        <RadioButton Content="5" Value="5" IsChecked="True"/>
                    </HorizontalStackLayout>

                    <Button Text="Save Task"
                            Command="{Binding SaveCommand}"
                            BackgroundColor="#1A1D3F"
                            TextColor="White"
                            CornerRadius="12"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>

