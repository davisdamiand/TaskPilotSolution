<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskPilot.Client.ProfilePage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#F8F9FA">

    <Grid RowDefinitions="*, Auto" BackgroundColor="#F5F5F7">
        <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Profile Header -->
            <Frame CornerRadius="20" 
                   BackgroundColor="White" 
                   HasShadow="True"
                   Padding="25">
                <VerticalStackLayout Spacing="15">

                    <!-- Profile Picture -->
                    <Frame CornerRadius="60" 
                           WidthRequest="120" 
                           HeightRequest="120"
                           HorizontalOptions="Center"
                           Padding="0"
                           HasShadow="True"
                           BackgroundColor="#5B7CB8">
                        <Image Source="user_avatar.png" 
                               Aspect="AspectFill"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>

                    <!-- Name -->
                    <Label Text="{Binding FullName }"
                           x:Name="LabelFullName"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#1F2937"/>

                </VerticalStackLayout>
            </Frame>


            <Label 
                Text="Your Position!"
                HorizontalTextAlignment="Center"
                FontSize="20"
                FontAttributes="Bold"
                TextColor="Black"/>  


            <Border 
                StrokeThickness="3"
                Stroke="#1F2937"
                StrokeShape="RoundRectangle 6">
                <CollectionView ItemsSource="{Binding LeagueStudents}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="28" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="28" />
                                </Grid.ColumnDefinitions>

                                <!--Display Student Rank-->
                                    <Border Stroke="Transparent"
                                            StrokeShape="RoundRectangle 15"
                                            StrokeThickness="2">
                                        <Label 
                                            Text="{Binding LeagueRank}" 
                                            FontAttributes="Bold"
                                            HorizontalTextAlignment="Center"
                                            Grid.Column="0"
                                            TextColor="Black" 
                                            FontSize="18" />

                                        <Border.Triggers>
                                            <DataTrigger TargetType="Border"
                                                         Binding="{Binding IsCurrentStudent}"
                                                         Value="True">
                                                <Setter Property="BackgroundColor" Value="#D1E7FF"/>
                                                <Setter Property="Stroke" Value="#1F2937"/>
                                            </DataTrigger>
                                        </Border.Triggers>
                                    </Border>

                                    <!-- Display Student Name -->
                                <Label  
                                    Text="{Binding StudentName}" 
                                    Grid.Column="1"
                                    FontAttributes="Bold"
                                    TextColor="Black"
                                    HorizontalTextAlignment="Center"
                                    FontSize="18" />

                                <!-- Display Student Time Spent -->
                                <Label  
                                    Grid.Column="2" 
                                    Text="{Binding TimeSpentMinutes}" 
                                    FontSize="16"
                                    HorizontalTextAlignment="End"
                                    TextColor="Black" />
                            </Grid>
                        </DataTemplate>

                    </CollectionView.ItemTemplate>
                </CollectionView>
            </Border>

                
            
            <!-- Activity Stats Grid -->
            <Label Text="Activity Stats"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#1F2937"
                   Margin="0,10,0,10"/>

            <Grid RowDefinitions="Auto,Auto" 
                  ColumnDefinitions="*,*"
                  RowSpacing="15"
                  ColumnSpacing="15">

                <!-- Productivity Stat -->
                <Frame Grid.Row="0" Grid.Column="0"
                       CornerRadius="20"
                       BackgroundColor="White"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="12">
                        <Frame CornerRadius="30"
                               WidthRequest="60"
                               HeightRequest="60"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#22D3EE" Offset="0.0"/>
                                    <GradientStop Color="#34D399" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Label Text="ðŸ“ˆ"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="{Binding TotalPomodoroSessions}"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1F2937"/>
                        <Label Text="Total Pomodoro Sessions"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Inactive Stat -->
                <Frame Grid.Row="0" Grid.Column="1"
                       CornerRadius="20"
                       BackgroundColor="White"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="12">
                        <Frame CornerRadius="30"
                               WidthRequest="60"
                               HeightRequest="60"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#F472B6" Offset="0.0"/>
                                    <GradientStop Color="#FB7185" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Label Text="ðŸ”¥"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="{Binding Streak}"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1F2937"/>
                        <Label Text="Streak"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Online Stat -->
                <Frame Grid.Row="1" Grid.Column="0"
                       CornerRadius="20"
                       BackgroundColor="White"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="12">
                        <Frame CornerRadius="30"
                               WidthRequest="60"
                               HeightRequest="60"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FBBF24" Offset="0.0"/>
                                    <GradientStop Color="#FB923C" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Label Text="âœ…"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="{Binding TotalCompletedTasks}"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1F2937"/>
                        <Label Text="Completed Tasks"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Offline Stat -->
                <Frame Grid.Row="1" Grid.Column="1"
                       CornerRadius="20"
                       BackgroundColor="White"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="12">
                        <Frame CornerRadius="30"
                               WidthRequest="60"
                               HeightRequest="60"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#818CF8" Offset="0.0"/>
                                    <GradientStop Color="#A78BFA" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Label Text="âŒ"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="{Binding TotalInCompletedTasks}"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1F2937"/>
                        <Label Text="Not Completed Tasks"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                </Frame>

            </Grid>

            <Button
                Command="{Binding LogoutCommand}"
                 FontAttributes="Bold"
                 FontSize="16"
                 TextColor="White"
                 BackgroundColor="#1E1E5A"
                 CornerRadius="10"
                 Padding="0,14"
                Text="Logout"/>

        </VerticalStackLayout>
    </ScrollView>
        <ContentPresenter Grid.Row="0" />
        <Grid Grid.Row="1" 
              ColumnDefinitions="*,*,*" 
              BackgroundColor="Transparent"
              HeightRequest="60"
              Padding="10,0,0,0">
            <Button Grid.Column="0"
                    WidthRequest="60" 
                    Margin="0,0,0,15" CornerRadius="10"  
                    HeightRequest="60"
                    ImageSource="todo.jpg"
                    BackgroundColor="White" 
                    Command="{Binding ReturnTodoPageCommand}"
                    TextColor="White"/>
            <Button Grid.Column="1" 
                    WidthRequest="60" 
                    Margin="0,0,0,15" 
                    CornerRadius="10"  
                    HeightRequest="60" 
                    Command="{Binding ReturnHomePageCommand}"
                    BackgroundColor="White"
                    ImageSource="home.jpg"
                    TextColor="White"/>
            <Button Grid.Column="2" 
                    WidthRequest="60" 
                    Margin="0,0,0,15" 
                    CornerRadius="10"  
                    HeightRequest="60" 
                    ImageSource="calendar.jpg"
                    FontSize="26" 
                    BackgroundColor="White"
                    Command="{Binding ReturnCalendarPageCommand}"
                    TextColor="White"/>
        </Grid>
    </Grid>

</ContentPage>