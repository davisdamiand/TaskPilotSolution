<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskPilot.Client.ProfilePage"
             BackgroundColor="#F8F9FA">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Profile Header -->
            <Frame CornerRadius="20" 
                   BackgroundColor="White" 
                   HasShadow="True"
                   Padding="25">
                <VerticalStackLayout Spacing="15">

                    <!-- Profile Picture -->
                    <Frame CornerRadius="60" 
                           WidthRequest="120" 
                           HeightRequest="120"
                           HorizontalOptions="Center"
                           Padding="0"
                           HasShadow="True"
                           BackgroundColor="#5B7CB8">
                        <Image Source="user_avatar.png" 
                               Aspect="AspectFill"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                    </Frame>

                    <!-- Name -->
                    <Label Text="Jarren Rye"
                           FontSize="28"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="#1F2937"/>

                    <!-- University -->
                    <Frame BackgroundColor="#F3F4F6"
                           CornerRadius="10"
                           Padding="12,8"
                           HasShadow="False"
                           HorizontalOptions="Center">
                        <Label Text="University: Eduvos"
                               FontSize="16"
                               TextColor="#6B7280"
                               FontAttributes="Bold"/>
                    </Frame>

                </VerticalStackLayout>
            </Frame>

            <!-- Activity Stats Grid -->
            <Label Text="Activity Stats"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#1F2937"
                   Margin="0,10,0,10"/>

            <Grid RowDefinitions="Auto,Auto" 
                  ColumnDefinitions="*,*"
                  RowSpacing="15"
                  ColumnSpacing="15">

                <!-- Productivity Stat -->
                <Frame Grid.Row="0" Grid.Column="0"
                       CornerRadius="20"
                       BackgroundColor="White"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="12">
                        <Frame CornerRadius="30"
                               WidthRequest="60"
                               HeightRequest="60"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#22D3EE" Offset="0.0"/>
                                    <GradientStop Color="#34D399" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Label Text="📈"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="75%"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1F2937"/>
                        <Label Text="Productivity"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Inactive Stat -->
                <Frame Grid.Row="0" Grid.Column="1"
                       CornerRadius="20"
                       BackgroundColor="White"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="12">
                        <Frame CornerRadius="30"
                               WidthRequest="60"
                               HeightRequest="60"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#F472B6" Offset="0.0"/>
                                    <GradientStop Color="#FB7185" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Label Text="⏸️"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="25%"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1F2937"/>
                        <Label Text="Inactive"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Online Stat -->
                <Frame Grid.Row="1" Grid.Column="0"
                       CornerRadius="20"
                       BackgroundColor="White"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="12">
                        <Frame CornerRadius="30"
                               WidthRequest="60"
                               HeightRequest="60"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FBBF24" Offset="0.0"/>
                                    <GradientStop Color="#FB923C" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Label Text="🌐"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="60%"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1F2937"/>
                        <Label Text="Online"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Offline Stat -->
                <Frame Grid.Row="1" Grid.Column="1"
                       CornerRadius="20"
                       BackgroundColor="White"
                       HasShadow="True"
                       Padding="20">
                    <VerticalStackLayout Spacing="12">
                        <Frame CornerRadius="30"
                               WidthRequest="60"
                               HeightRequest="60"
                               Padding="0"
                               HasShadow="False"
                               HorizontalOptions="Center">
                            <Frame.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#818CF8" Offset="0.0"/>
                                    <GradientStop Color="#A78BFA" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Frame.Background>
                            <Label Text="📴"
                                   FontSize="30"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <Label Text="25%"
                               FontSize="32"
                               FontAttributes="Bold"
                               HorizontalOptions="Center"
                               TextColor="#1F2937"/>
                        <Label Text="Offline"
                               FontSize="14"
                               HorizontalOptions="Center"
                               TextColor="#6B7280"/>
                    </VerticalStackLayout>
                </Frame>

            </Grid>

            <!-- Recent Tasks Section -->
            <Label Text="Recent Tasks"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#1F2937"
                   Margin="0,20,0,10"/>

            <Frame CornerRadius="20"
                   BackgroundColor="White"
                   HasShadow="True"
                   Padding="0">
                <VerticalStackLayout Spacing="0">

                    <!-- Task 1 - Completed -->
                    <Frame CornerRadius="0" 
                           BackgroundColor="Transparent"
                           Padding="20"
                           HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0"
                                   CornerRadius="25"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Padding="0"
                                   BackgroundColor="#10B981"
                                   HasShadow="False">
                                <Label Text="✓"
                                       FontSize="24"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontAttributes="Bold"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="ITBEA Assignment"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label Text="Completed • Oct 15, 2025"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>
                            <Frame Grid.Column="2"
                                   CornerRadius="12"
                                   BackgroundColor="#ECFDF5"
                                   Padding="12,6"
                                   HasShadow="False"
                                   VerticalOptions="Center">
                                <Label Text="95%"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#10B981"/>
                            </Frame>
                        </Grid>
                    </Frame>

                    <BoxView HeightRequest="1" Color="#E5E7EB" Margin="20,0"/>

                    <!-- Task 2 - Completed -->
                    <Frame CornerRadius="0" 
                           BackgroundColor="Transparent"
                           Padding="20"
                           HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0"
                                   CornerRadius="25"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Padding="0"
                                   BackgroundColor="#10B981"
                                   HasShadow="False">
                                <Label Text="✓"
                                       FontSize="24"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontAttributes="Bold"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="Research Proposal"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label Text="Completed • Oct 14, 2025"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>
                            <Frame Grid.Column="2"
                                   CornerRadius="12"
                                   BackgroundColor="#ECFDF5"
                                   Padding="12,6"
                                   HasShadow="False"
                                   VerticalOptions="Center">
                                <Label Text="88%"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#10B981"/>
                            </Frame>
                        </Grid>
                    </Frame>

                    <BoxView HeightRequest="1" Color="#E5E7EB" Margin="20,0"/>

                    <!-- Task 3 - In Progress -->
                    <Frame CornerRadius="0" 
                           BackgroundColor="Transparent"
                           Padding="20"
                           HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0"
                                   CornerRadius="25"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Padding="0"
                                   BackgroundColor="#F59E0B"
                                   HasShadow="False">
                                <Label Text="⟳"
                                       FontSize="24"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontAttributes="Bold"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="Exam for ITPMA"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label Text="In Progress • Due Nov 20, 2025"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>
                            <Frame Grid.Column="2"
                                   CornerRadius="12"
                                   BackgroundColor="#FEF3C7"
                                   Padding="12,6"
                                   HasShadow="False"
                                   VerticalOptions="Center">
                                <Label Text="Active"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#F59E0B"/>
                            </Frame>
                        </Grid>
                    </Frame>

                    <BoxView HeightRequest="1" Color="#E5E7EB" Margin="20,0"/>

                    <!-- Task 4 - Pending -->
                    <Frame CornerRadius="0" 
                           BackgroundColor="Transparent"
                           Padding="20"
                           HasShadow="False">
                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                            <Frame Grid.Column="0"
                                   CornerRadius="25"
                                   WidthRequest="50"
                                   HeightRequest="50"
                                   Padding="0"
                                   BackgroundColor="#6B7280"
                                   HasShadow="False">
                                <Label Text="○"
                                       FontSize="24"
                                       TextColor="White"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       FontAttributes="Bold"/>
                            </Frame>
                            <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                <Label Text="ITEPA Presentation"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1F2937"/>
                                <Label Text="Pending • Due Oct 23, 2025"
                                       FontSize="13"
                                       TextColor="#6B7280"/>
                            </VerticalStackLayout>
                            <Frame Grid.Column="2"
                                   CornerRadius="12"
                                   BackgroundColor="#F3F4F6"
                                   Padding="12,6"
                                   HasShadow="False"
                                   VerticalOptions="Center">
                                <Label Text="Todo"
                                       FontSize="14"
                                       FontAttributes="Bold"
                                       TextColor="#6B7280"/>
                            </Frame>
                        </Grid>
                    </Frame>

                </VerticalStackLayout>
            </Frame>

            <!-- Bottom Spacing -->
            <BoxView HeightRequest="20" Color="Transparent"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>