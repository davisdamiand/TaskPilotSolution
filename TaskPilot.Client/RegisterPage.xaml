<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:TaskPilot.Client.ViewModels"
             x:Class="TaskPilot.Client.RegisterPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="30,60,30,60" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">

            <Label Text="Take control of your studying"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#1E1E5A"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>

            <Image Source="task_pilot_icon.jpg"
                   HeightRequest="140"
                   Aspect="AspectFit"
                   Margin="0,10,0,20"/>

            <Label Text="Already Registered? Log in here."
                   FontSize="13"
                   TextColor="#555"
                   HorizontalOptions="Center"
                   Margin="0,0,0,10"/>

            <Frame BackgroundColor="#F2F2F7" CornerRadius="10" HasShadow="False" Padding="10,5">
                <Entry Placeholder="Name" Text="{Binding Name}" TextColor="#1E1E5A" PlaceholderColor="#9FA4B2" BackgroundColor="Transparent"/>
            </Frame>

            <Frame BackgroundColor="#F2F2F7" CornerRadius="10" HasShadow="False" Padding="10,5">
                <Entry Placeholder="Surname" Text="{Binding Surname}" TextColor="#1E1E5A" PlaceholderColor="#9FA4B2" BackgroundColor="Transparent"/>
            </Frame>

            <Frame BackgroundColor="#F2F2F7" CornerRadius="10" HasShadow="False" Padding="10,5">
                <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" TextColor="#1E1E5A" PlaceholderColor="#9FA4B2" BackgroundColor="Transparent"/>
            </Frame>

            <Frame BackgroundColor="#F2F2F7" CornerRadius="10" HasShadow="False" Padding="10,5">
                <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" TextColor="#1E1E5A" PlaceholderColor="#9FA4B2" BackgroundColor="Transparent"/>
            </Frame>

            <Frame BackgroundColor="#F2F2F7" CornerRadius="10" HasShadow="False" Padding="10,5">
                <DatePicker Date="{Binding DOB}" TextColor="#1E1E5A" BackgroundColor="Transparent"/>
            </Frame>

            <Button Text="Sign Up"
                    FontAttributes="Bold"
                    FontSize="16"
                    TextColor="White"
                    BackgroundColor="#1E1E5A"
                    CornerRadius="10"
                    Padding="0,14"
                    Command="{Binding RegisterCommand}"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>