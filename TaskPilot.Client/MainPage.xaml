<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TaskPilot.Client.MainPage"
             BackgroundColor="White">

    <Grid RowDefinitions="Auto,*" Padding="20">

        <!-- Top section: Image + Label -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" HorizontalOptions="Center">
            <Image 
                Source="task_pilot_icon.jpg"
                Style="{StaticResource PageLogo}" />
            <Label
                Text="Loading Experience for you..."
                HorizontalOptions="Center"
                FontSize="Medium"
                TextColor="Black"/>
        </VerticalStackLayout>

        <!-- Bottom section: ActivityIndicator -->
        <ActivityIndicator 
            Grid.Row="1"
            IsRunning="True"
            Color="#1A1D3F"
            WidthRequest="60"
            HeightRequest="60"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>
    </Grid>
</ContentPage>
