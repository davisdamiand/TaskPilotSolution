<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskPilot.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskPilot.Client"
    Title="TaskPilot.Client">

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Title="Main"
        Route="MainPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Title="Register"
        Route="RegisterPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:LoginPage}"
        Title="Login"
        Route="LoginPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:TodoPage}"
        Title="Todo"
        Route="TodoPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:StatsPage}"
        Title="Stats"
        Route="StatsPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Title="Profile"
        Route="ProfilePage"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:CalendarPage}"
        Title="Calendar"
        Route="CalendarPage"/>
    <ShellContent
        ContentTemplate="{DataTemplate local:ForgotPasswordPage}"
        Title="Forgot Password"
        Route="ForgotPasswordPage"/>
</Shell>
