<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskPilot.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Shell.NavBarIsVisible="False"
    FlyoutBehavior="Disabled"
    xmlns:local="clr-namespace:TaskPilot.Client">

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="LoginPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:RegisterPage}"
        Route="RegisterPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:ForgotPasswordPage}"
        Route="ForgotPasswordPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:CalendarPage}"
        Route="CalendarPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:TodoPage}"
        Route="TodoPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:StatsPage}"
        Route="StatsPage" />
    <ShellContent
        ContentTemplate="{DataTemplate local:LandingPage}"
        Route="LandingPage" />
</Shell>

