<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TaskPilot.Client.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TaskPilot.Client"
    Title="TaskPilot.Client"
    FlyoutBehavior="Flyout">

    <!-- Visible in the flyout -->
    <FlyoutItem Title="Main">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Todo">
        <ShellContent ContentTemplate="{DataTemplate local:TodoPage}" Route="TodoPage" />
    </FlyoutItem>

    <FlyoutItem Title="Profile">
        <ShellContent ContentTemplate="{DataTemplate local:ProfilePage}" Route="ProfilePage" />
    </FlyoutItem>

    <FlyoutItem Title="Calendar">
        <ShellContent ContentTemplate="{DataTemplate local:CalendarPage}" Route="CalendarPage" />
    </FlyoutItem>

</Shell>
